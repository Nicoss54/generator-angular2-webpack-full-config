{
    "name": "angular2-webpack",
    "version": "3.0.0",
    "description": "A webpack starter for Angular",
    "scripts": {
        "start": "npm run serve:dev",
        "serve:dev": "webpack-dev-server --config config/dev.js --inline --progress --profile --colors --watch --content-base ./client/",
        "build:prod": "webpack --config config/prod.js --progress --profile --colors --display-error-details",
        "serve:prod": "superstatic dist --port 3000 --host localhost",
        "prod": "node server.js"
    },
    "license": "MIT",
    "dependencies": {
        "@angular/common": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "@angular/core": "^4.0.0",
        "@angular/forms": "^4.0.0",
        "@angular/http": "^4.0.0",
        "@angular/platform-browser": "^4.0.0",
        "@angular/platform-browser-dynamic": "^4.0.0",
        "@angular/router": "^4.0.0",
        "bootstrap": "3.3.7",
        "core-js": "2.4.1",
        "hammerjs": "2.0.8",
        "hapi": "16.0.1",
        "inert": "4.0.3",
        "jquery": "2.2.4",
        "path": "0.12.7",
        "rxjs": "^5.0.1",
        "superstatic": "4.0.3",
        "tslint-eslint-rules": "^4.1.1",
        "zone.js": "^0.8.5"
    },
    "devDependencies": {
        "@types/angular": "^1.5.16",
        "@types/angular-animate": "^1.5.5",
        "@types/angular-cookies": "^1.4.2",
        "@types/angular-mocks": "^1.5.5",
        "@types/angular-resource": "^1.5.6",
        "@types/angular-route": "^1.3.2",
        "@types/angular-sanitize": "^1.3.3",
        "@types/jasmine": "2.5.35",
        "@types/node": "6.0.45",
        "angular2-template-loader": "0.4.0",
        "awesome-typescript-loader": "3.1.2",
        "compression-webpack-plugin": "0.3.1",
        "copy-webpack-plugin": "2.1.3",
        "css-loader": "0.23.1",
        "extract-text-webpack-plugin": "1.0.1",
        "file-loader": "0.8.5",
        "html-loader": "0.4.3",
        "html-webpack-plugin": "2.15.0",
        "json-loader": "0.5.4",
        "node-sass": "~4.5.3",
        "null-loader": "0.1.1",
        "raw-loader": "0.5.1",
        "rimraf": "^2.5.4",
        "sass-loader": "3.2.0",
        "source-map-loader": "0.1.5",
        "style-loader": "0.13.1",
        "tslint": "^5.4.3",
        "tslint-loader": "^3.5.3",
        "typescript": "2.3.2",
        "webpack": "2.2.1",
        "webpack-dev-server": "2.2.1",
        "webpack-md5-hash": "0.0.5",
        "webpack-merge": "^3.0.0"
    }
}