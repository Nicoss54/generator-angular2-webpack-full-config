{
  "name": "angular2-webpack",
  "version": "2.0.2",
  "description": "A webpack starter for Angular",
  "scripts": {
    "start": "npm run serve:dev",
    "serve:dev": "webpack-dev-server --config config/dev.js --inline --progress --profile --colors --watch --display-error-details --display-cached --content-base ./client/",
    "build:prod": "webpack --config config/prod.js --progress --profile --colors --display-error-details",
    "serve:prod": "superstatic dist --port 3000 --host localhost",
    "prod": "node server.js"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "bootstrap": "3.3.7",
    "core-js": "2.4.1",
    "hammerjs": "2.0.8",
    "hapi": "16.0.1",
    "inert": "4.0.3",
    "jquery": "2.2.4",
    "path": "0.12.7",
    "rxjs": "^5.0.1",
    "superstatic": "4.0.3",
    "zone.js": "0.8.5"
  },
  "devDependencies": {
    "@types/node": "6.0.45",
    "@types/jasmine": "2.5.35",
    "angular2-template-loader": "0.4.0",
    "awesome-typescript-loader": "3.1.2",
    "css-loader": "0.23.1",
    "json-loader": "0.5.4",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.15.0",
    "null-loader": "0.1.1",
    "raw-loader": "0.5.1",
    "sass-loader": "3.2.0",
    "node-sass": "3.12.0",
    "source-map-loader": "0.1.5",
    "rimraf": "2.5.2",
    "style-loader": "0.13.1",
    "typescript": "2.2.2",
    "compression-webpack-plugin": "0.3.1",
    "webpack": "1.13.0",
    "webpack-dev-server": "1.14.1",
    "webpack-md5-hash": "0.0.5",
    "webpack-merge": "0.14.0",
    "copy-webpack-plugin": "2.1.3"
  }
}
